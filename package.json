{
    "name": "slack-status-automation",
    "version": "0.0.0",
    "main": "main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "ng": "ng",
        "start": "npm-run-all -p electron:serve ng:serve",
        "build": "npm run electron:serve-tsc && ng build --base-href ./",
        "build:dev": "npm run build -- -c dev",
        "build:prod": "npm run build -- -c production",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "ng:serve": "ng serve -o",
        "electron:serve-tsc": "tsc -p tsconfig.electron.json",
        "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
        "electron:local": "npm run build:prod && npx electron .",
        "electron:build": "npm run build:prod && electron-builder build"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~11.0.6",
        "@angular/cdk": "^11.0.4",
        "@angular/common": "~11.0.6",
        "@angular/compiler": "~11.0.6",
        "@angular/core": "~11.0.6",
        "@angular/forms": "~11.0.6",
        "@angular/material": "^11.0.4",
        "@angular/platform-browser": "~11.0.6",
        "@angular/platform-browser-dynamic": "~11.0.6",
        "@angular/router": "~11.0.6",
        "@ctrl/ngx-emoji-mart": "^4.1.0",
        "@ng-bootstrap/ng-bootstrap": "^8.0.1",
        "@slack/web-api": "^5.15.0",
        "bootstrap": "^4.5.3",
        "express": "^4.17.1",
        "menubar": "^9.0.1",
        "node-wifi": "^2.0.14",
        "public-ip": "^4.0.3",
        "rxjs": "~6.6.0",
        "tslib": "^2.0.0",
        "zone.js": "^0.11.3"
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "^11.0.0",
        "@angular-devkit/build-angular": "~0.1100.6",
        "@angular-eslint/builder": "^1.0.0",
        "@angular-eslint/eslint-plugin": "^1.0.0",
        "@angular-eslint/eslint-plugin-template": "^1.0.0",
        "@angular-eslint/schematics": "^1.0.0",
        "@angular-eslint/template-parser": "^1.0.0",
        "@angular/cli": "~11.0.6",
        "@angular/compiler-cli": "~11.0.6",
        "@types/express": "^4.17.9",
        "@types/jasmine": "~3.6.0",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "codelyzer": "^6.0.0",
        "electron": "^11.1.1",
        "electron-builder": "^22.9.1",
        "electron-reload": "^1.5.0",
        "electron-store": "^6.0.1",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~5.1.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "protractor": "~7.0.0",
        "ts-node": "~8.3.0",
        "typescript": "~4.0.2",
        "wait-on": "^5.2.1"
    }
}
