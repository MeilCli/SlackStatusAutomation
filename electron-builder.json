{
    "productName": "SlackStatusAutomation",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!LICENSE.txt",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!angular.webpack.js",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tsconfig.app.json",
        "!tsconfig.electron.json",
        "!tsconfig.eslint.json",
        "!tsconfig.spec.json",
        "!.prettierrc"
    ],
    "win": {
        "icon": "dist/assets/icons",
        "target": ["portable"]
    },
    "mac": {
        "icon": "dist/assets/icons",
        "target": ["dmg"]
    },
    "linux": {
        "icon": "dist/assets/icons",
        "target": ["AppImage"]
    }
}
