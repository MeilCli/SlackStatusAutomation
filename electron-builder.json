{
    "productName": "SlackStatusAutomation",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "build/**/*.png",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.ts",
        "!LICENSE.txt",
        "!package.json",
        "!package-lock.json",
        "!src/**/*.ts",
        "!src/**/*.html",
        "!src/**/*.scss",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!angular.webpack.js",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tsconfig.app.json",
        "!tsconfig.electron.json",
        "!tsconfig.eslint.json",
        "!tsconfig.spec.json",
        "!.prettierrc"
    ],
    "win": {
        "target": ["portable"]
    },
    "mac": {
        "target": ["dmg"]
    },
    "linux": {
        "target": ["AppImage"]
    }
}
